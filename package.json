{
  "name": "vue3-signature",
  "description": "Electronic signature for Vue3",
  "version": "0.4.0",
  "author": "Shayne Wang <1614565666@qq.com>",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WangShayne/vue3-signature.git"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "./dist/vue3-signature.umd.js",
  "module": "./dist/vue3-signature.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue3-signature.mjs",
      "require": "./dist/vue3-signature.umd.js",
      "types": "./types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode lib && npm run build:tsc",
    "build:tsc": "vue-tsc --emitDeclarationOnly",
    "build:demo": "vite build",
    "preview": "vite preview",
    "serve": "vite preview"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "default-passive-events": "^2.0.0",
    "signature_pad": "^5.1.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/compiler-sfc": "^3.5.13",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vue-tsc": "^2.1.10"
  }
}
